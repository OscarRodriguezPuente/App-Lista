<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtname"
        android:layout_width="64dp"
        android:layout_height="42dp"
        android:background="#070707"
        android:text="NAME"
        android:textAlignment="center"
        android:textColor="#FDFDFD"
        app:layout_constraintEnd_toEndOf="@+id/backimage"
        app:layout_constraintStart_toStartOf="@+id/backimage"
        app:layout_constraintTop_toTopOf="@+id/backimage" />

    <ImageView
        android:id="@+id/backimage"
        android:layout_width="378dp"
        android:layout_height="364dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/txtAge"
        android:layout_width="46dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:background="#0B0A0A"
        android:text="00"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:background="#000000"
        android:text="$"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/txtMail"
        app:layout_constraintStart_toEndOf="@+id/txtAge"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.065" />

    <TextView
        android:id="@+id/txtMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="44dp"
        android:background="#000000"
        android:text="00.00"
        android:textColor="#FFFCFC"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="44dp"
        android:background="#000000"
        android:text="Address"
        android:textColor="#FDFDFD"
        app:layout_constraintStart_toEndOf="@+id/txtMoney"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/txtAddres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="44dp"
        android:background="#000000"
        android:text="Domicilio"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/backimage"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/txtMail"
        android:layout_width="372dp"
        android:layout_height="34dp"
        android:layout_marginBottom="28dp"
        android:background="#050505"
        android:text="Mail"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/backimage"
        app:layout_constraintEnd_toEndOf="@+id/backimage"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/backimage"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.936" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/map"
        app:liteMode="true"
        app:mapType="hybrid"
        android:layout_width="394dp"
        android:layout_height="427dp"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backimage" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/backimage"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/backimage"
        app:layout_constraintTop_toBottomOf="@+id/txtname"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="45dp"
        android:layout_height="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="40dp"
        android:background="#131313"
        android:text="Age"
        android:textColor="#FBFBFB"
        app:layout_constraintBottom_toTopOf="@+id/txtMail"
        app:layout_constraintStart_toStartOf="@+id/backimage" />

</androidx.constraintlayout.widget.ConstraintLayout>